<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - vertacnik_TallerMecanico2025</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/vertacnik_TallerMecanico2025.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light taller-bg-base box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand fw-bold fs-4 text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                    VertacnikTallerMecánico
                </a>

                <!-- Botón hamburguesa -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menú colapsable -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            @if (User.HasClaim("Rol", "Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Vehiculos" asp-action="Index">Vehículos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Repuestos" asp-action="Index">Repuestos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="TipoServicios" asp-action="Index">Tipo Servicios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pedidos" asp-action="Index">Pedidos</a>
                            </li>
                        }
                    </ul>

                    <!-- Dropdown de usuario -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown ms-auto">
                            <a class="d-flex align-items-center text-decoration-none dropdown-toggle"
                            href="#" role="button" id="userDropdown"
                            data-bs-toggle="dropdown" aria-expanded="false">

                                @if (!string.IsNullOrEmpty(User.FindFirst("Avatar")?.Value))
                                {
                                    <img src="@Url.Content(@User.FindFirst("Avatar")?.Value)" alt="Perfil"
                                        class="rounded-circle" style="width: 32px; height: 32px;" />
                                }
                                else
                                {
                                    string? nombre = User.FindFirst("NombreCompleto")?.Value ?? "";
                                    string? inicial = nombre.Length > 0 ? nombre.Substring(0, 1).ToUpper() : "?";
                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center"
                                        style="width: 32px; height: 32px;">@inicial</div>
                                }
                                <span class="ms-2 text-dark">@User.FindFirst("Rol")?.Value @User.FindFirst("NombreCompleto")?.Value</span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <form asp-controller="User" asp-action="Logout" method="post" class="m-0">
                                        <button type="submit" class="dropdown-item">Cerrar sesión</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <!-- Vue 3 (global build) -->
    <script src="https://unpkg.com/vue@3/dist/vue.global.prod.js"></script>
    
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/modalForm.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
